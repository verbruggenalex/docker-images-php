{{- $php_version := .Orbit.php_version -}}
{{- $variant := .Orbit.variant -}}
{{- $node_version := .Orbit.node_version -}}

FROM verbral/php:{{ $php_version }}-v3-{{ $variant }}

LABEL authors="Julien Neuhart <j.neuhart@verbral.com>, David NÃ©grier <d.negrier@verbral.com>"

USER root

RUN apt-get update && \
    apt-get install -y --no-install-recommends gnupg && \
    curl -sL https://deb.nodesource.com/setup_{{ $node_version }}.x | bash - && \
    apt-get update && \
    apt-get install -y --no-install-recommends nodejs && \
    curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | apt-key add - && \
    echo "deb https://dl.yarnpkg.com/debian/ stable main" | tee /etc/apt/sources.list.d/yarn.list && \
    apt-get update && \
    apt-get install -y --no-install-recommends yarn

USER docker
